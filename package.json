{
  "name": "price-tracker",
  "version": "1.0.0",
  "description": "A comprehensive price tracking system for SKUs, vendors, and locations",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "heroku-postbuild": "npm install && cd client && npm install && npm run build && cd ../server && npm install"
  },
  "keywords": [
    "price-tracker",
    "inventory",
    "vendors"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  }
}
